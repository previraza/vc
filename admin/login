    <script defer>
        $(function() {
            $("#login").on('submit', (e) => {
                e.preventDefault();
                $('#login-loader').fadeIn();
                $('#loginErrorBox').html();
                $.post("/app/settings/get/connected.php", {
                    un: $('#login_username').val(),
                    by: 'adminer_norefer',
                    pw: $('#login_password').val()
                }, function(data, textStatus, jqXHR) {
                    try {
                        var res = JSON.parse(data);
                        if (res.status == "succes") location.href = './';
                        else {
                            console.log(res.header, res.content);
                            $('#loginErrorBox').html(` <div class="alert alert-danger alert-dismissible mt-3" role="alert" id="alertConnect"><small>${res.content}</small></div>`);
                            $('#login-loader').fadeOut(300);
                        }
                    } catch (error) {
                        $('#loginErrorBox').html(` <div class="alert alert-danger alert-dismissible mt-3" role="alert" id="alertConnect"><small>Une erreur s'est produit pendant le traitement de votre requette.</small></div>`);
                        $('#login-loader').fadeOut(300);
                        return console.log(data);
                    }
                });
            })
            document.title = 'Se connecter sur le SNEN de l\'Institut Supérieur de Techniques Appliquées';
        });
    </script>
