$('#grDelibereBtn').on('click', () => $('.delibereBtn').each((idx, e) => {
    updateStudent(e);
}));
$('#grPassedBtn').on('click', () => $('.delibereBtn').each((idx, e) => {
    passedStudent(e);
}));
_updateStudent = e => {
    let r=e.querySelector('.lastTd').dataset;
    $.ajax({
        url: "/app/settings/edit/_generatePalmares.php?sending_by=mcisme",
        data: {
            completed: r.completed,
            resultat: r.resultat,
            student: r.student,
            mention: r.mention,
            credit: r.credit,
            CON_47: 'MCISME'
        }, type: "POST",
        success: function(response) {
            try {
                let res = JSON.parse(response);
                e.className += (res.status == 'succes') ? ' bg-warning' : ' bg-dark text-white';
                if (res.status == 'error') console.log('Erreur ' + res.code + ' : ' + res.content);
            } catch (error) {
                console.error(response);
            }
        }
    })
}

updateStudent = e => {
    let r=e.querySelector('.lastTd').dataset;
    if(r.ended == '1' && r.periode != 'full'){
        $.ajax({
            url: "/app/settings/edit/generatePalmares.php?sending_by=mcisme",
            data: {
                student: r.student,
                periode: r.periode,
                CON_47: 'MCISME'
            }, type: "POST",
            success: function(response) {
                try {let res = JSON.parse(response);
                    e.className += (res.status == 'succes') ? ' bg-warning' : ' bg-dark text-white';
                    if (res.status == 'error') console.log('Erreur ' + res.code + ' : ' + res.content);
                } catch (error) {
                    console.error(response);
                }
            }
        })
    }
}

passedStudent = e => {
    window.el = e;
    let r=e.querySelector('.lastTd').dataset;
    if(r.passable == '1' && r.periode === 'full'){
        $.ajax({
            url: "/app/settings/add/updateStdClass.php?sending_by=mcisme",
            data: {
                student: r.student,
                CON_47: 'MCISME'
            }, type: "POST",
            success: function(response) {
                try {let res = JSON.parse(response);
                    e.className += (res.status == 'succes') ? ' bg-warning' : ' bg-dark text-white';
                    if (res.status == 'error') console.log('Erreur ' + res.code + ' : ' + res.content);
                } catch (error) {
                    console.error(response);
                }
            }
        })
    }
}


