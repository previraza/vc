$('.current_datetime').dateCounter();
window.sendingRecours = function(id_ = 0) {
    $.ajax({
        url: "/app/settings/set/recours.php?sending_by=mcisme",
        type: "POST",
        data: {
            id: id_,
            CON_47: 'MCISME',
        },
        success: function(response) {
            try {
                var res = JSON.parse(response);
                if (res.status == 'succes') $('#editing_' + id_).changeClass('bg-danger', 'bg-success text-white');
                else if (res.status == 'error') {
                    $('#editing_' + id_).changeClass('bg-success text-white', 'bg-warning')
                    console.log(response);
                }
            } catch (error) {
                $('#editing_' + id_).changeClass('bg-success text-white', 'bg-warning')
                console.log(response, error);
            }
        }
    });
}
